# 🧪 TESTER PIPELINE
# ═══════════════════════════════════════════════════════════════════════════════

.PHONY: tester
tester: ## 🧪 Automated Tester Pipeline (APK + TestFlight) - Use --android or --ios for platform-specific builds
	$(call print_header,🧪 Building for Testing)
	@echo "$(CYAN)Platform Configuration:$(NC)"
	@echo "$(YELLOW)• Android: $(if $(filter true,$(BUILD_ANDROID)),$(GREEN)Enabled$(NC),$(RED)Disabled$(NC))$(NC)"
	@echo "$(YELLOW)• iOS: $(if $(filter true,$(BUILD_IOS)),$(GREEN)Enabled$(NC),$(RED)Disabled$(NC))$(NC)"
	@echo ""
	
	@$(MAKE) check-deps
	@$(MAKE) version-interactive
	@$(MAKE) prepare-build
	
ifeq ($(BUILD_ANDROID),true)
	@$(MAKE) build-android-apk
endif

ifeq ($(BUILD_IOS),true)
	@$(MAKE) build-ios-ipa
	@$(MAKE) upload-ios-testflight
endif

	$(call print_header,🎉 Tester Build Complete!)
	@echo "$(GREEN)Build artifacts available in: $(BUILD_DIR)/$(NC)"
	ifeq ($(BUILD_ANDROID),true)
		@echo "$(YELLOW)📱 Android APK: $(BUILD_DIR)/$(APK_NAME)$(NC)"
	endif
	ifeq ($(BUILD_IOS),true)
		@echo "$(YELLOW)🍎 iOS IPA: $(BUILD_DIR)/$(IPA_NAME)$(NC)"
		@echo "$(YELLOW)🍎 TestFlight: Upload completed$(NC)"
	endif

